@page
@model ExtremeWeatherBoard.Pages.PostCommentModel
@{
}
@section MainContent
{
            <div class="row-cols-auto" style="margin:1em; margin-bottom:3em;">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <a class="justify-content-end" asp-page="/PostMessage" asp-route-messageReceiverId="@Model.DiscussionThread.UserDataId">@Model.DiscussionThread.UserName</a>
                        <span class="justify-content-end">@Model.DiscussionThread.TimeStamp</span>
                    </div>
                     <br> @Model.DiscussionThread.Title
                </div>
                <div class="card-body">
                    @Model.DiscussionThread.Text
                </div>
            </div>
        </div>
    <div class="row mb-3">
        <h1>Post Comment</h1>
    </div>
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <label for="Topic Text">Text</label>
            <textarea class="form-control" placeholder="Topic Text" asp-for="Comment" rows="10"></textarea>
            <span asp-validation-for="Comment" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="PostId" value="@Model.PostId" asp-route-postId="@Model.PostId"/>
        <div class="row justify-content-end">
            <button type="submit" class="btn">Post Comment</button>
        </div>
    </form>
}
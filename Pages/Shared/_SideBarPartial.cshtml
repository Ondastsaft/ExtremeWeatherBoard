@{
    var sideBarOptions = Model.SideBarOptions;
    
    string navigateTo = Model.NavigateTo;

    <table>
        @if (sideBarOptions != null)
        @foreach (var item in sideBarOptions)
        {
            {
            <tr>
                <td>

                            @switch (navigateTo)
                            {
                                case "/Categories":
                                    <a asp-page="/SubCategories" asp-route-sidebarContentId="@item.Id">@item.Title</a>
                                    break;
                                case "/SubCategories":
                                    <a asp-page="/DiscussionThreads" asp-route-sidebarContentId="@item.Id" asp-route-mainContentId="@item.Id">@item.Title</a>
                                    break;
                                case "/DiscussionThreads":
                                    <a asp-page="/Comments" asp-route-sidebarContentId="@item.Id" asp-route-mainContentId="@item.Id">@item.Title</a>
                                    break;
                                case "/Comments":
                                    <a asp-page="/Comments" asp-route-sidebarContentId="@item.Id" asp-route-mainContentId="@item.Id">@item.Title</a>
                                    break;
                            }
                </td>
            </tr>
            }                        
        }
    </table>
}
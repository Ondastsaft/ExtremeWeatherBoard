@page
@model ExtremeWeatherBoard.Pages.Admin.DiscussionThreadAdmin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>DiscussionThread</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DiscussionThread.Id" />
            <div class="form-group">
                <label asp-for="DiscussionThread.Title" class="control-label"></label>
                <input asp-for="DiscussionThread.Title" class="form-control" />
                <span asp-validation-for="DiscussionThread.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscussionThread.Text" class="control-label"></label>
                <input asp-for="DiscussionThread.Text" class="form-control" />
                <span asp-validation-for="DiscussionThread.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscussionThread.CreatedAt" class="control-label"></label>
                <input asp-for="DiscussionThread.CreatedAt" class="form-control" />
                <span asp-validation-for="DiscussionThread.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscussionThread.CreatorUserId" class="control-label"></label>
                <select asp-for="DiscussionThread.CreatorUserId" class="form-control" asp-items="ViewBag.CreatorUserId"></select>
                <span asp-validation-for="DiscussionThread.CreatorUserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscussionThread.SubCategoryId" class="control-label"></label>
                <select asp-for="DiscussionThread.SubCategoryId" class="form-control" asp-items="ViewBag.SubCategoryId"></select>
                <span asp-validation-for="DiscussionThread.SubCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

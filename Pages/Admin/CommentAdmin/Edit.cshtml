@page
@model ExtremeWeatherBoard.Pages.Admin.CommentAdmin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Comment.Id" />
            <div class="form-group">
                <label asp-for="Comment.Text" class="control-label"></label>
                <input asp-for="Comment.Text" class="form-control" />
                <span asp-validation-for="Comment.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Title" class="control-label"></label>
                <input asp-for="Comment.Title" class="form-control" />
                <span asp-validation-for="Comment.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.PostedAt" class="control-label"></label>
                <input asp-for="Comment.PostedAt" class="form-control" />
                <span asp-validation-for="Comment.PostedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.CommentUserDataId" class="control-label"></label>
                <select asp-for="Comment.CommentUserDataId" class="form-control" asp-items="ViewBag.CommentUserDataId"></select>
                <span asp-validation-for="Comment.CommentUserDataId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.CommentAdminUserDataId" class="control-label"></label>
                <select asp-for="Comment.CommentAdminUserDataId" class="form-control" asp-items="ViewBag.CommentAdminUserDataId"></select>
                <span asp-validation-for="Comment.CommentAdminUserDataId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.CommentThreadId" class="control-label"></label>
                <select asp-for="Comment.CommentThreadId" class="form-control" asp-items="ViewBag.CommentThreadId"></select>
                <span asp-validation-for="Comment.CommentThreadId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model ExtremeWeatherBoard.Pages.Admin.MessageAdmin.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Message.Topic" class="control-label"></label>
                <input asp-for="Message.Topic" class="form-control" />
                <span asp-validation-for="Message.Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.Text" class="control-label"></label>
                <input asp-for="Message.Text" class="form-control" />
                <span asp-validation-for="Message.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.SentAt" class="control-label"></label>
                <input asp-for="Message.SentAt" class="form-control" />
                <span asp-validation-for="Message.SentAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message.SenderId" class="control-label"></label>
                <select asp-for="Message.SenderId" class ="form-control" asp-items="ViewBag.SenderId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Message.ReceiverId" class="control-label"></label>
                <select asp-for="Message.ReceiverId" class ="form-control" asp-items="ViewBag.ReceiverId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Message.AdminSenderId" class="control-label"></label>
                <select asp-for="Message.AdminSenderId" class ="form-control" asp-items="ViewBag.AdminSenderId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Message.AdminReceiverId" class="control-label"></label>
                <input asp-for="Message.AdminReceiverId" class="form-control" />
                <span asp-validation-for="Message.AdminReceiverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


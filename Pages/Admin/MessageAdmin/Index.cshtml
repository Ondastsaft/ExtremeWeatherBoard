@page
@model ExtremeWeatherBoard.Pages.Admin.MessageAdmin.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].Topic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].SentAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].Sender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].Receiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].AdminSender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].AdminReceiverId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message[0].AdminReceiver)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Message) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Topic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sender.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receiver.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminSender.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminReceiverId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdminReceiver.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model TopicIndexModel
@{
    @section Sidebar {
        @if (Model.PageSideBarPartialModel != null)
        {
            <partial name="_SideBarPartial" model="Model.PageSideBarPartialModel" />
        }
    }
    @section MainContent {
        @if (Model.DiscussionThreadsPostModel != null)
        {
            <partial name="_discussionThreadPostPartial" model="Model.DiscussionThreadsPostModel" />
        }
        else if (Model.PageMainContentPartialModel != null)
        {
            <partial name="_discussionThreadsMainContentPartial" model="Model.PageMainContentPartialModel" />
        }
    }
}
